<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更换手机号"
        android:background="@mipmap/bg_dialog_title"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"/>
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_close_white"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/et_phone"
        android:inputType="number"
        android:maxLength="11"
        android:drawableStart="@mipmap/phone_two"
        style="@style/style_common_text"
        android:hint="请输入有效手机号"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividing_line_color"
        app:layout_constraintTop_toBottomOf="@id/et_phone"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_get_code"
        app:layout_constraintTop_toBottomOf="@id/et_phone"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:text="获取验证码"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:gravity="end"
        android:textColor="@color/colorOrange"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/et_code"
        android:inputType="number"
        android:maxLength="6"
        android:drawableStart="@mipmap/safety"
        style="@style/style_common_text"
        android:hint="6位数字"
        app:layout_constraintTop_toBottomOf="@id/et_phone"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_get_code"
        android:layout_marginStart="@dimen/activity_horizontal_margin"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividing_line_color"
        app:layout_constraintTop_toBottomOf="@id/tv_get_code"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_get_code"
        android:text="确认更换"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:paddingBottom="14dp"
        android:layout_marginTop="10dp"
        android:paddingTop="14dp"/>
</android.support.constraint.ConstraintLayout>