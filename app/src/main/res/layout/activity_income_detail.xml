<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_grey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_wallet"
        android:orientation="vertical"
        android:id="@+id/ll_total"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="历史总收益"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_money"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:id="@+id/ll_filter"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/ll_total"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="不限"
            android:gravity="center_vertical"
            style="@style/style_common_text"
            android:drawableStart="@mipmap/date"
            android:drawablePadding="8dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/dividing_line_color"/>
        <TextView
            android:id="@+id/tv_end"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="不限"
            android:gravity="center_vertical"
            style="@style/style_common_text"
            android:drawableStart="@mipmap/date"
            android:drawablePadding="8dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询"
            android:textColor="@color/white"
            android:background="@drawable/bg_blue_conner"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividing_line_color"
        app:layout_constraintTop_toBottomOf="@id/ll_filter"/>
    <cn.sinata.xldutils.view.SwipeRefreshRecyclerLayout
        android:id="@+id/mSwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1px"
        app:layout_constraintTop_toBottomOf="@id/ll_filter"/>
</android.support.constraint.ConstraintLayout>