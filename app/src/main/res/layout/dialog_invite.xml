<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawablePadding="12dp"
        android:drawableTop="@mipmap/wechat_bule"
        android:padding="5dp"
        android:text="微信好友"
        android:textColor="@color/black_text"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@id/tv_moment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_moment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawablePadding="12dp"
        android:drawableTop="@mipmap/friend_bule"
        android:padding="5dp"
        android:text="朋友圈"
        android:textColor="@color/black_text"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@id/tv_qq"
        app:layout_constraintStart_toEndOf="@id/tv_wechat"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawablePadding="12dp"
        android:drawableTop="@mipmap/qq_bule"
        android:padding="5dp"
        android:text="QQ好友"
        android:textColor="@color/black_text"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@id/tv_qq_zone"
        app:layout_constraintStart_toEndOf="@id/tv_moment"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_qq_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawablePadding="12dp"
        android:drawableTop="@mipmap/qqzone_bule"
        android:padding="5dp"
        android:text="QQ空间"
        android:textColor="@color/black_text"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@id/tv_qq"
        app:layout_constraintEnd_toStartOf="@id/tv_weibo"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微博"
        android:id="@+id/tv_weibo"
        android:drawableTop="@mipmap/weibo_bule"
        android:drawablePadding="12dp"
        android:textSize="12dp"
        android:textColor="@color/black_text"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/tv_qq_zone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividing_line_color"
        app:layout_constraintTop_toBottomOf="@id/tv_wechat"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        app:layout_constraintTop_toBottomOf="@id/tv_wechat"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>
</android.support.constraint.ConstraintLayout>