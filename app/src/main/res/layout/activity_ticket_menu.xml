<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.cardriver.DriverMenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_user">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginTop="10dp"
                android:layout_width="72dp"
                android:id="@+id/headImg"
                android:layout_height="72dp"
                style="@style/DefaultHeadStyle"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_sex_selector_white"
                android:id="@+id/tv_name"
                android:drawablePadding="4dp"
                android:text="--"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:layout_below="@+id/headImg"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_car_info"
                android:text="--"
                android:textSize="@dimen/textSize"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/tv_name"
                android:textColor="@color/white"
                android:visibility="gone"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_below="@id/tv_car_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="0\n服务班次"
                    android:gravity="center"
                    android:id="@+id/tv_order_count"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:drawableEnd="@mipmap/ic_line"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tv_praise"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content"
                    android:text="0\n好评率"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:drawableEnd="@mipmap/ic_line"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="0\n余额"
                    android:id="@+id/tv_money"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_driver_manage"
            android:text="司机管理"
            style="@style/mineTextStyle2"
            android:drawableEnd="@mipmap/ic_more"/>
        <View
            style="@style/view_line_h"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/tv_car_manage"
            android:text="车辆管理"
            style="@style/mineTextStyle2"
            android:drawableEnd="@mipmap/ic_more"/>
        <View
            style="@style/view_line_h"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/tv_line_manage"
            android:text="线路班次管理"
            style="@style/mineTextStyle2"
            android:drawableEnd="@mipmap/ic_more"/>
        <View
            style="@style/view_line_h"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/tv_evaluate"
            android:text="乘客评价"
            style="@style/mineTextStyle2"
            android:drawableEnd="@mipmap/ic_more"/>
        <View
            style="@style/view_line_h"
            android:layout_height="10dp"
            android:background="@color/bg_grey"/>
        <TextView
            android:id="@+id/tv_my_wallet"
            android:text="我的钱包"
            style="@style/mineTextStyle2"
            android:drawableEnd="@mipmap/ic_more"/>
        <View
            style="@style/view_line_h"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/tv_account_safe"
            android:text="账户安全"
            style="@style/mineTextStyle2"
            android:drawableEnd="@mipmap/ic_more"/>
        <View
            style="@style/view_line_h"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/tv_feedback"
            style="@style/mineTextStyle2"
            android:text="意见反馈"
            android:drawableEnd="@mipmap/ic_more"/>
        <View
            style="@style/view_line_h"
            android:layout_height="10dp"
            android:background="@color/bg_grey"/>
        <TextView
            android:id="@+id/tv_share_friends"
            android:text="推荐给好友"
            style="@style/mineTextStyle2"
            android:drawableEnd="@mipmap/ic_more"/>
        <View
            style="@style/view_line_h"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/tv_about_us"
            android:text="关于我们"
            style="@style/mineTextStyle2"
            android:drawableEnd="@mipmap/ic_more"/>
        <View
            style="@style/view_line_h"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <FrameLayout
            android:id="@+id/fl_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="平台客服"
                style="@style/mineTextStyle2"/>
            <TextView
                style="@style/mineTextStyle2"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/tv_service_phone"
                android:gravity="right"
                android:textStyle="bold"/>
        </FrameLayout>
        <View
            style="@style/view_line_h"
            android:layout_height="10dp"
            android:background="@color/bg_grey"/>
        <TextView
            android:id="@+id/tv_logout"
            style="@style/mineTextStyle2"
            android:gravity="center"
            android:text="退出登录"/>
        <View
            style="@style/view_line_h"
            android:layout_height="20dp"
            android:background="@color/bg_grey"/>
    </LinearLayout>
</ScrollView>