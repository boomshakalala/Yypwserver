<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_grey">
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:id="@+id/tv_name_title"
            style="@style/style_common_title"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/style_common_text"
            android:background="@null"
            android:hint="请输入您的姓名"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:maxLength="10"
            android:layout_toEndOf="@id/tv_name_title"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/et_name"
            android:background="@color/dividing_line_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_common_title"
            android:layout_below="@id/et_name"
            android:text="性别"/>
        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请选择性别"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_toEndOf="@id/tv_name_title"
            android:layout_below="@id/et_name"
            android:drawableEnd="@mipmap/ic_choose"
            style="@style/style_common_text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_sex"
            android:background="@color/dividing_line_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_common_title"
            android:layout_below="@id/tv_sex"
            android:text="电话"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入司机的联系电话"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_toEndOf="@id/tv_name_title"
            android:layout_below="@id/tv_sex"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            style="@style/style_common_text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/et_phone"
            android:background="@color/dividing_line_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_common_title"
            android:layout_below="@id/et_phone"
            android:text="身份证号"/>
        <EditText
            android:id="@+id/et_id_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入您的身份证号"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_toEndOf="@id/tv_name_title"
            android:layout_below="@id/et_phone"
            android:background="@null"
            android:inputType="textVisiblePassword"
            android:digits="@string/id_card"
            style="@style/style_common_text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/et_id_card"
            android:background="@color/dividing_line_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_common_title"
            android:layout_below="@id/et_id_card"
            android:text="驾龄"/>
        <TextView
            android:id="@+id/tv_drive_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请选择领证日期"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_toEndOf="@id/tv_name_title"
            android:layout_below="@id/et_id_card"
            android:drawableEnd="@mipmap/ic_choose"
            style="@style/style_common_text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_drive_year"
            android:background="@color/dividing_line_color"/>
        <TextView
            android:id="@+id/tv_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_common_title"
            android:layout_below="@id/tv_drive_year"
            android:text="头像"
            android:paddingBottom="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="近期头像，头像完整，五官清晰可见"
            android:layout_below="@id/tv_head_title"
            style="@style/style_common_text"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/iv_head"
            style="@style/DefaultHeadStyle"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_drive_year"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividing_line_color"
            android:layout_below="@id/iv_head"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_license_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_common_title"
            android:layout_below="@id/iv_head"
            android:layout_marginTop="10dp"
            android:text="驾驶证"
            android:paddingBottom="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="有效期内，证件清晰，信息全部展示"
            android:layout_below="@id/tv_license_title"
            style="@style/style_common_text"
            android:paddingBottom="12dp"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="64dp"
            android:layout_height="44dp"
            android:id="@+id/iv_license"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/iv_head"
            android:layout_marginTop="20dp"
            app:placeholderImage="@mipmap/ic_upload_default"
            app:actualImageScaleType="centerCrop"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交审核"
        android:id="@+id/btn_action"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/rl_content"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
</android.support.constraint.ConstraintLayout>