<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_grey">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更换银行卡需验证绑定手机"
        android:textColor="@color/colorOrange"
        android:id="@+id/tv_tip"
        android:textSize="12sp"
        android:background="@color/color_alpha_orange"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:id="@+id/rl_content"
        app:layout_constraintTop_toBottomOf="@id/tv_tip">
        <TextView
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入有效手机号"
            style="@style/style_common_text"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:maxLength="11"
            android:drawableStart="@mipmap/phone_two"
            android:drawablePadding="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividing_line_color"
            android:layout_below="@id/et_phone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_get_code"
            android:text="获取验证码"
            android:layout_alignParentEnd="true"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="14sp"
            android:textColor="@color/colorOrange"
            android:layout_below="@id/et_phone"/>
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="6位数字"
            style="@style/style_common_text"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:maxLength="11"
            android:inputType="number"
            android:drawableStart="@mipmap/safety"
            android:drawablePadding="20dp"
            android:layout_below="@id/et_phone"
            android:layout_toStartOf="@id/tv_get_code"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/rl_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"/>
</android.support.constraint.ConstraintLayout>