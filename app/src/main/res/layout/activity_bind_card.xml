<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_grey">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="仅限绑定持卡人本人的银行卡"
        android:textColor="@color/colorOrange"
        android:id="@+id/tv_tip"
        android:textSize="12sp"
        android:background="@color/color_alpha_orange"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"/>
    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/tv_tip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="持卡人"
            style="@style/style_common_text"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="乃丹"
            style="@style/style_common_text"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:id="@+id/tv_name"
            android:layout_alignParentEnd="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividing_line_color"
            android:layout_below="@id/tv_name"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡号"
            style="@style/style_common_text"
            android:paddingTop="12dp"
            android:layout_below="@id/tv_name"
            android:paddingBottom="12dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/style_common_text"
            android:paddingTop="12dp"
            android:layout_below="@id/tv_name"
            android:paddingBottom="12dp"
            android:layout_toEndOf="@id/tv_title"
            android:id="@+id/et_car_num"
            android:background="@null"
            android:hint="请输入银行卡号"
            android:gravity="end"
            android:maxLength="20"
            android:inputType="number"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividing_line_color"
            android:layout_below="@id/et_car_num"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号"
            style="@style/style_common_text"
            android:paddingTop="12dp"
            android:layout_below="@id/et_car_num"
            android:paddingBottom="12dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/style_common_text"
            android:paddingTop="12dp"
            android:layout_below="@id/et_car_num"
            android:paddingBottom="12dp"
            android:layout_toEndOf="@id/tv_title"
            android:id="@+id/et_id_card"
            android:background="@null"
            android:hint="请输入身份证号"
            android:gravity="end"
            android:maxLength="18"
            android:inputType="textVisiblePassword"
            android:digits="@string/id_card"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rl_content"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="下一步"
        android:id="@+id/btn_action"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"/>
</android.support.constraint.ConstraintLayout>